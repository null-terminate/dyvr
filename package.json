{
  "name": "project-manager",
  "version": "1.0.0",
  "description": "A project management desktop application for organizing projects with source data folders",
  "main": "main.js",
  "homepage": "./",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:app": "electron-builder --mac dir",
    "dist": "electron-builder --publish=never",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "build": {
    "appId": "com.yourcompany.project-manager",
    "productName": "Project Manager",
    "directories": {
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "dmg": {
      "title": "Project Manager",
      "icon": false,
      "window": {
        "width": 540,
        "height": 380
      },
      "contents": [
        {
          "x": 410,
          "y": 190,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 190,
          "type": "file"
        }
      ]
    }
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "jest": "^30.0.5"
  },
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "sqlite3": "^5.1.7"
  }
}
