{
  "name": "electron-hello-world",
  "version": "1.0.0",
  "description": "A simple Hello World Electron app",
  "main": "main.js",
  "homepage": "./",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:app": "electron-builder --mac dir",
    "dist": "electron-builder --publish=never"
  },
  "build": {
    "appId": "com.yourcompany.electron-hello-world",
    "productName": "Hello World App",
    "directories": {
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "dmg": {
      "title": "Hello World App",
      "icon": false,
      "window": {
        "width": 540,
        "height": 380
      },
      "contents": [
        {
          "x": 410,
          "y": 190,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 190,
          "type": "file"
        }
      ]
    }
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "sqlite3": "^5.1.7"
  }
}
