{
  "name": "dyvr",
  "version": "1.0.0",
  "description": "A project management desktop application for organizing projects with source data folders",
  "main": "dist/main.js",
  "homepage": "./",
  "scripts": {
    "build:main": "tsc",
    "build:main:watch": "tsc --watch",
    "build:renderer": "webpack --config webpack.config.js",
    "build:renderer:watch": "webpack --config webpack.config.js --watch",
    "copy-assets": "mkdir -p dist/src/assets && cp -r src/assets/* dist/src/assets/",
    "build": "npm run build:main && npm run build:renderer && npm run copy-assets",
    "rebuild": "npm run clean && npm run build",
    "start": "electron .",
    "dev": "concurrently \"npm run build:main:watch\" \"npm run dev:renderer\" \"electron . --dev\"",
    "dev:debug": "concurrently \"npm run build:main:watch\" \"npm run dev:renderer\" \"electron --inspect=9229 . --dev\"",
    "dev:renderer": "webpack serve --config webpack.config.js",
    "package": "electron-builder",
    "package:mac": "electron-builder --mac",
    "package:dir": "electron-builder --mac dir",
    "dist": "electron-builder --publish=never",
    "test": "jest",
    "test:watch": "jest --watch",
    "clean": "rm -rf dist"
  },
  "build": {
    "appId": "com.null-reference.dyvr",
    "productName": "Dyvr",
    "directories": {
      "output": "build"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json",
      "src/assets/**/*"
    ],
    "icon": "src/assets/Sandwich.png",
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "dmg": {
      "title": "Dyvr",
      "icon": "src/assets/Sandwich.png",
      "window": {
        "width": 540,
        "height": 380
      },
      "contents": [
        {
          "x": 410,
          "y": 190,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 190,
          "type": "file"
        }
      ]
    }
  },
  "devDependencies": {
    "@types/electron": "^1.6.12",
    "@types/jest": "^30.0.0",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^24.1.0",
    "@types/uuid": "^10.0.0",
    "concurrently": "^9.2.0",
    "copy-webpack-plugin": "^13.0.0",
    "css-loader": "^7.1.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-devtools-installer": "^4.0.0",
    "electron-rebuild": "^3.2.9",
    "html-webpack-plugin": "^5.6.3",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "jsdom": "^26.1.0",
    "style-loader": "^4.0.0",
    "ts-jest": "^29.4.0",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "webpack": "^5.100.2",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  },
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/react-router-dom": "^5.3.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.7.1",
    "sqlite3": "^5.1.7",
    "uuid": "^11.1.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "roots": [
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.ts"
    ]
  }
}
